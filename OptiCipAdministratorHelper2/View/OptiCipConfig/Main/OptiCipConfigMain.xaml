                    <GridViewColumn Header="Name" Width="320" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn  Header="Matches" Width="80" DisplayMemberBinding="{Binding Id}" />
                </GridView>
            </ListView.View>
